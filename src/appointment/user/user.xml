<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
    <package name="user" namespace="/" extends="struts-default">
    	<action name="loginForm">
   			<result>/jsp/user/login.jsp</result>
		</action>  	
        <action name="login" class="appointment.user.Login">
   			<result name="input">/jsp/user/login.jsp</result>
   			<result name="success" type="redirectAction">tab</result>
		</action>
    	<action name="logout" class="appointment.user.Logout">
   			<result>/jsp/user/login.jsp</result>
		</action>  	
    	<action name="tab">
   			<result>/jsp/user/tab.jsp</result>
		</action>  	
    </package>
</struts>    
